{
  "name": "torrent-search-monorepo",
  "version": "1.0.0",
  "description": "Torrent search application monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@torrent-search/web",
    "build": "npm run build --workspace=@torrent-search/api && npm run build --workspace=@torrent-search/web",
    "build:api": "npm run build --workspace=@torrent-search/api",
    "build:web": "npm run build --workspace=@torrent-search/web",
    "start": "npm run start --workspace=@torrent-search/web",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}